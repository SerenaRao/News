<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_hot_icon"
        android:layout_width="92dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_hot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_hot_icon"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iv_hot_icon"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_hot_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hot_icon"
        android:layout_toRightOf="@id/iv_hot_icon"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_hot_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hot_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_hot_toTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hot_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:visibility="gone"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_20"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>